    "socket.io": "^4.7.2",
    "ytdl-core": "^4.11.5",
    "ffmpeg-static": "^5.2.0",
    "@supabase/supabase-js": "^2.38.0",
    "fluent-ffmpeg": "^2.1.2",
    "uuid": "^9.0.1",
    "multer-s3": "^3.0.1",
    "aws-sdk": "^2.1490.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  },
  "engines": {
