{
  "name": "blueme",
  "version": "2.0.0",
  "description": "BlueMe - Share music with friends wirelessly via Bluetooth",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "mkdir -p dist && cp -r public/* dist/",
