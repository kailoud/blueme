{
  "name": "blueme",
  "version": "2.0.0",
  "description": "BlueMe - Share music with friends wirelessly via Bluetooth",
  "main": "server.js",
  "scripts": {
    "start": "node minimal-server.js",
    "dev": "nodemon server.js",
    "build": "mkdir -p dist && cp -r public/* dist/",
    "build:backend": "echo 'Backend ready for deployment'",
    "deploy:backend": "echo 'Deploying backend to cloud platform...'",
    "serve": "python3 -m http.server 8000",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "echo 'Node.js version:' && node --version && echo 'npm version:' && npm --version",
    "start:local": "node server.js",
    "start:minimal": "node minimal-server.js"
  },
  "keywords": [
    "bluetooth",
    "music",
    "sync",
    "audio",
    "sharing",
    "web-bluetooth",
    "real-time",
    "socket.io",
    "hybrid-app"
  ],
  "author": "BlueMe Team",
  "license": "MIT",
  "dependencies": {
    "@distube/ytdl-core": "^4.16.12",
    "@supabase/supabase-js": "^2.38.0",
    "aws-sdk": "^2.1490.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "multer": "^2.0.0-rc.3",
    "multer-s3": "^3.0.1",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "18.x",
    "npm": ">=8.0.0"
  },
  "railway": {
    "nodeVersion": "18",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kailoud/blueme.git"
  }
}
